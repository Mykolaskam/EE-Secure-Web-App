{% extends 'layout.html.twig' %}
{% block title %}Log In{% endblock %}
{% block content %}
<div class="container">

   

        <form action="{{ action_login }}" method="post">

            <h2>Sign In</h2>

            <div class="text-wrapper">
                <input class="input" type="text" name="username" />
                <label>Username</label>
            </div>

            <div class="text-wrapper">
                <input class="input" type="password" name="password" />
                <label>Password</label>
            </div>

            <button type="submit" class="btn-blue" name="login">Login</button>


        </form>

        <h4>{{ error_message }}</h4>


         <form action="{{ action_register }}" method="post">

            <h2>Sign In</h2>

            <div class="text-wrapper">
                <input class="input" type="text" name="username" />
                <label>Username</label>
            </div>

            <div class="text-wrapper">
                <input class="input" type="password" name="password" />
                <label>Password</label>
            </div>

            <div class="text-wrapper">
                <input class="input" type="text" name="name" />
                <label>name</label>
            </div>

            <div class="text-wrapper">
                <input class="input" type="text" name="surname" />
                <label>surname</label>
            </div>

            <button type="submit" class="btn-blue" name="register">Register</button>


        </form>

    </div>

{% endblock %}
